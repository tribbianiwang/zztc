<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/index_toolbar"
        style="@style/ToolBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="title"
            android:textColor="@color/white"
            android:textSize="@dimen/small_middle_text_size" />
    </android.support.v7.widget.Toolbar>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


    <RelativeLayout
        android:padding="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/app_margin_small"
            android:id="@+id/tv_car_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/design_text_black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_see_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_see_picture"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/app_margin_right"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/primary"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_margin_left"
        android:background="@color/gray_white"
        />

    <TextView
        android:id="@+id/tv_park_name"
        android:padding="@dimen/app_margin_left"
        android:layout_margin="@dimen/app_margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/design_text_black"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"
        />

    <RelativeLayout
        android:padding="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/app_margin_small"
            android:id="@+id/tv_start_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_start_time"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/design_text_gray"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/app_margin_right"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/design_text_gray"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_margin_left"
        android:background="@color/gray_white"
        />


    <RelativeLayout
        android:visibility="gone"
        android:padding="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/app_margin_small"
            android:id="@+id/tv_coupons_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_coupons_title"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/design_text_gray"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_coupons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/app_margin_right"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/design_text_gray"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"
        />

    <RelativeLayout
        android:padding="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/app_margin_small"
            android:id="@+id/tv_park_during_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_park_during_title_long"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/design_text_gray"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_park_during_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/app_margin_right"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/design_text_gray"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"
        />


    <RelativeLayout
        android:padding="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/app_margin_small"
            android:id="@+id/tv_total_money_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_total_money_title"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/design_text_black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/app_margin_right"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/design_text_black"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"
        />

    <RelativeLayout
        android:id="@+id/rl_already_pay"
        android:padding="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/app_margin_small"
            android:id="@+id/tv_paid_money_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_paid_money"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/design_text_gray"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_paid_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/app_margin_right"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/design_text_gray"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"
        />

    <RelativeLayout
        android:padding="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/app_margin_small"
            android:id="@+id/tv_should_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_should_pay_title_no_point"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/design_text_black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_should_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/app_margin_right"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/design_main_orange"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button

            android:layout_below="@id/ll_head"
            android:id="@+id/bt_pay_now"
            android:layout_marginLeft="@dimen/app_margin_top"
            android:layout_marginRight="@dimen/app_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_margin_top"
            android:background="@drawable/bg_add"
            android:text="@string/string_pay_now"
            android:textColor="@color/white"
            android:textSize="@dimen/small_middle_text_size" />



    </LinearLayout>

        </LinearLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
