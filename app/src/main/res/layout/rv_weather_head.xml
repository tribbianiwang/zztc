<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <LinearLayout
        android:paddingTop="200dp"
        android:paddingLeft="@dimen/app_margin_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_todays_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30°"
            android:textSize="@dimen/notnormal_text_size"
            android:textColor="@color/design_text_black"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_marginLeft="@dimen/app_margin_left"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_todays_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多云"
                android:textSize="@dimen/small_middle_text_size"
                android:textColor="@color/design_text_black"
                />
            <TextView
                android:id="@+id/tv_temp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="↑27°C"
                android:textSize="@dimen/micro_text_size"
                android:textColor="@color/design_text_black"
                />
            <TextView
                android:id="@+id/tv_temp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="↓17°C"
                android:textSize="@dimen/micro_text_size"
                android:textColor="@color/design_text_black"
                />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/app_margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/app_margin_right"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        >
        <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/design_text_black"
            android:text="70%"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/micro_text_size"
            android:textColor="@color/design_text_black"
            android:text="湿度"
            />

    </LinearLayout>

        <View
            android:layout_marginRight="@dimen/app_margin_left"
            android:layout_marginTop="@dimen/app_margin_left"
            android:layout_marginBottom="@dimen/app_margin_left"
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"
            />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/design_text_black"
            android:text="4级"
            />
        <TextView
            android:id="@+id/tv_wind_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/micro_text_size"
            android:textColor="@color/design_text_black"
            android:text="北风"
            />

    </LinearLayout>

    </LinearLayout>


    <View
        android:layout_marginLeft="@dimen/app_margin_right"
        android:layout_marginRight="@dimen/app_margin_right"
        android:layout_marginTop="@dimen/app_margin_top"
        android:layout_width="match_parent"

        android:paddingBottom="@dimen/app_margin_bottom"

        android:layout_height="2dp"
        android:background="@color/gray"
        />

</LinearLayout>