<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/app_margin_small"
   android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginLeft="@dimen/app_margin_small"
        android:layout_centerVertical="true"
        android:id="@+id/tv_park_name"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/design_text_gray"
        android:textSize="@dimen/small_text_size"
        />


    <TextView
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_park_name"
        android:id="@+id/tv_remain_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/font_red"
        android:textSize="@dimen/small_text_size"
        />

    <TextView
        android:layout_marginRight="@dimen/app_margin_left"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/tv_refill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_refill"
        android:textColor="@color/primary_blue"
        android:textSize="@dimen/small_text_size"
        />

</RelativeLayout>