<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/app_margin_left"
    android:background="@color/white">

    <RelativeLayout
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_marginRight="@dimen/app_margin_right"
        android:layout_marginTop="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/tv_car_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:textColor="@color/design_text_black"
            android:textSize="@dimen/medium_large_text_size" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_car_license"
            android:layout_alignBottom="@+id/tv_car_license"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:textColor="@color/font_red"
            android:textSize="@dimen/medium_large_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/app_margin_left"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="@dimen/app_margin_small"
        android:layout_alignParentLeft="true"
        android:id="@+id/tv_park_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"

        android:textColor="@color/design_text_gray"
        />

        <RelativeLayout
            android:layout_below="@id/tv_park_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView

            android:layout_marginTop="@dimen/app_margin_small"

            android:layout_alignParentLeft="true"
            android:id="@+id/tv_in_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/design_text_gray"
            />

            <TextView
                android:id="@+id/tv_park_during_time"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/design_text_gray"
                android:layout_marginRight="@dimen/app_margin_right"
                android:layout_marginBottom="@dimen/app_margin_small"
                android:layout_marginTop="@dimen/app_margin_small"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                />


        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="@dimen/app_margin_left"
        android:layout_marginBottom="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">






        <TextView
        android:id="@+id/tv_pay_method"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/primary_blue"
        android:layout_marginLeft="@dimen/app_margin_left"


        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        />


    </RelativeLayout>


</LinearLayout>