<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="1dp">




<LinearLayout
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_white_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/app_margin_left"
        >

        <TextView
            android:id="@+id/carNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/design_text_black"
            android:textSize="@dimen/small_middle_text_size" />


        <LinearLayout
            android:id="@+id/ll_default_number"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBox"
            android:layout_centerVertical="true"
            android:button="@null"
            android:background="@drawable/selector_car_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:visibility="visible"
                android:layout_marginLeft="@dimen/app_margin_small"
                android:layout_marginRight="@dimen/app_margin_right"
                android:layout_centerVertical="true"
                android:id="@+id/defaultNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_defult_car"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/design_text_black"
                android:layout_alignParentRight="true"
                />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_marginRight="@dimen/app_margin_right"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_nopwd_pay"
            android:textColor="@color/design_text_gray"
            android:textSize="@dimen/small_text_size"
            android:layout_centerVertical="true"
            />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/autoPay"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_margin_right"
            app:kswAnimationDuration="300"
            app:kswBackDrawable="@drawable/ios_back_drawable"
            app:kswBackMeasureRatio="1.4"
            app:kswThumbDrawable="@drawable/ios_thumb_selector"
            app:kswThumbMarginBottom="-8dp"
            app:kswThumbMarginLeft="-5dp"
            app:kswThumbMarginRight="-5dp"
            app:kswThumbMarginTop="-2.5dp"/>


    </RelativeLayout>
    <View
        android:layout_marginRight="@dimen/app_margin_right"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"
        />

    <RelativeLayout
        android:id="@+id/rl_certification"
        android:background="@drawable/selector_white_gray"
        android:padding="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_car_certification"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/design_text_gray"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_marginRight="@dimen/app_margin_right"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_arrow_gray_right"
            />

    </RelativeLayout>
    <View
        android:layout_marginRight="@dimen/app_margin_right"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"
        />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/unbind"
        android:background="@drawable/selector_white_gray"
        android:padding="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_car_delete"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/design_text_gray"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_marginRight="@dimen/app_margin_right"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_arrow_gray_right"
            />

    </RelativeLayout>


    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rl_month_card"
        android:background="@drawable/selector_white_gray"
        android:padding="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_month_card_info"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/design_text_gray"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/iv_monthcard_arrow"
            android:layout_marginRight="@dimen/app_margin_right"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_arrow_down_gray"
            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rv_month_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_margin_left"
        android:background="@color/gray_white"
        />


</LinearLayout>
    <View
        android:layout_width="@dimen/app_margin_small"
        android:layout_height="match_parent"
        android:background="@color/gray_white"
        />
    <Button
        android:layout_marginBottom="@dimen/app_margin_left"
        android:id="@+id/bt_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_red_selector"
        android:text="删除"
        android:textColor="@android:color/white"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>