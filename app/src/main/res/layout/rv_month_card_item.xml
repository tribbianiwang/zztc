<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/app_margin_left"
    android:background="@color/gray_white"
    android:padding="@dimen/app_margin_left"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_park_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/design_text_black"
            />

        <TextView
            android:id="@+id/tv_address"
            android:layout_marginTop="@dimen/app_margin_small"
            android:textColor="@color/design_text_gray"
            android:textSize="@dimen/micro_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />

        <LinearLayout
            android:layout_marginTop="@dimen/app_margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_month_card"
                android:background="@drawable/rounded_blue_stroke_wide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_month_card_title"
                android:textSize="@dimen/micro_text_size"
                android:textColor="@color/primary_blue"
                />

            <TextView
                android:layout_marginLeft="@dimen/app_margin_small"
                android:id="@+id/tv_season_card"
                android:background="@drawable/rounded_blue_stroke_wide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_season_card_title"
                android:textSize="@dimen/micro_text_size"
                android:textColor="@color/primary_blue"
                />
            <TextView
                android:layout_marginLeft="@dimen/app_margin_small"
                android:id="@+id/tv_yeard_card"
                android:background="@drawable/rounded_blue_stroke_wide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_year_card_title"
                android:textSize="@dimen/micro_text_size"
                android:textColor="@color/primary_blue"
                />

            <TextView
                android:layout_marginLeft="@dimen/app_margin_small"
                android:id="@+id/tv_optional_card"
                android:background="@drawable/rounded_blue_stroke_wide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_option_card_title"
                android:textSize="@dimen/micro_text_size"
                android:textColor="@color/primary_blue"
                />


        </LinearLayout>




    </LinearLayout>


    <ImageView
        android:layout_marginRight="@dimen/app_margin_right"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/icon_arrow_gray_right"
        />

</RelativeLayout>