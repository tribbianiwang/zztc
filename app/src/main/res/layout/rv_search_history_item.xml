<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_park_name"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:padding="@dimen/app_margin_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/gray_deep"
        />

    <View
        android:layout_marginLeft="@dimen/app_margin_top"
        android:layout_marginRight="@dimen/app_margin_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"
        />


</LinearLayout>