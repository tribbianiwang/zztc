<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_white"
    >




    <RelativeLayout
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/app_margin_right"
        >

        <ImageView
            android:id="@+id/iv_close"
            android:layout_alignParentLeft="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_back"
            />


    <TextView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_order_info"
        android:textSize="@dimen/small_middle_text_size"
        android:textColor="@color/white"
        />

    </RelativeLayout>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_margin_left"
                android:background="@color/white"
                android:padding="@dimen/app_margin_left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/app_margin_small"
                    android:text="@string/string_title_park_during_time"
                    android:textColor="@color/design_text_gray"
                    android:textSize="@dimen/small_middle_text_size" />


                <TextView
                    android:id="@+id/tv_park_during_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/app_margin_small"
                    android:text="5小时26分"
                    android:textColor="@color/design_text_gray"
                    android:textSize="@dimen/small_middle_text_size" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:padding="@dimen/app_margin_left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/app_margin_small"
                    android:text="@string/string_pay_money_title"
                    android:textColor="@color/design_text_gray"
                    android:textSize="@dimen/small_middle_text_size" />


                <TextView
                    android:id="@+id/tv_total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/app_margin_small"
                    android:text="24元"
                    android:textColor="@color/design_main_orange"
                    android:textSize="@dimen/small_middle_text_size" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_pick_couponing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_white_gray"
                android:padding="@dimen/app_margin_left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/app_margin_small"
                    android:text="@string/string_couponing_title"
                    android:textColor="@color/design_text_gray"
                    android:textSize="@dimen/small_middle_text_size" />

                <ImageView
                    android:id="@+id/iv_pick_couponing"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_arrow_gray_right" />

                <TextView
                    android:id="@+id/tv_pick_couponing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/app_margin_small"
                    android:layout_toLeftOf="@id/iv_pick_couponing"
                    android:text="@string/string_pick_coupoing"
                    android:textColor="@color/design_text_gray"
                    android:textSize="@dimen/small_middle_text_size" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_margin_left"
                android:background="@color/white"
                android:paddingBottom="@dimen/app_margin_left"
                android:paddingLeft="@dimen/app_margin_right"
                android:paddingTop="@dimen/app_margin_left"
                android:text="@string/string_pick_pay_type"
                android:textColor="@color/design_text_gray"
                android:textSize="@dimen/small_text_size" />

            <RelativeLayout
                android:id="@+id/rl_wechat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_white_gray"
                android:clickable="true"
                android:padding="@dimen/app_margin_left">

                <ImageView
                    android:id="@+id/iv_wechat"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/app_margin_left"
                    android:src="@drawable/icon_wechat_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/app_margin_left"
                    android:layout_toRightOf="@id/iv_wechat"
                    android:text="@string/wechat_rechage_title"
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/small_middle_text_size" />

                <ImageView
                    android:id="@+id/iv_wx_pay"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/app_margin_right"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_pay_uncheck" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_alipay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_white_gray"
                android:clickable="true"
                android:padding="@dimen/app_margin_left">

                <ImageView
                    android:id="@+id/iv_alipay"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/app_margin_left"
                    android:src="@drawable/icon_alipay_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/app_margin_left"
                    android:layout_toRightOf="@id/iv_alipay"
                    android:text="@string/alipay_recharge_title"
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/small_middle_text_size" />

                <ImageView
                    android:id="@+id/iv_alipay_pay"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/app_margin_right"
                    android:background="@drawable/icon_pay_uncheck"
                    android:scaleType="fitXY" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_white_gray"
                android:clickable="true"
                android:padding="@dimen/app_margin_left"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_wallet"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/app_margin_left"
                    android:src="@drawable/icon_wallet_orange" />

                <TextView
                    android:id="@+id/tv_balanse_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/app_margin_left"
                    android:layout_toRightOf="@id/iv_wallet"
                    android:text="@string/string_wallet_pay"
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/small_middle_text_size" />

                <TextView
                    android:id="@+id/tv_balanse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/app_margin_right"
                    android:layout_toRightOf="@id/tv_balanse_title"
                    android:text="@string/string_balance"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/micro_text_size" />

                <ImageView
                    android:id="@+id/iv_wallet_pay"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/app_margin_right"
                    android:scaleType="fitXY" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_white_gray"
                android:paddingBottom="@dimen/app_margin_left"
                android:paddingLeft="@dimen/app_margin_right"
                android:paddingTop="@dimen/app_margin_left"
                android:text="@string/string_pick_coupoing"
                android:textColor="@color/font_red"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_pay_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/app_margin_bottom"
                    android:layout_marginLeft="@dimen/app_margin_right"
                    android:layout_marginRight="@dimen/app_margin_right"
                    android:layout_marginTop="@dimen/app_margin_top"
                    android:background="@drawable/selector_blue_deep"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="@dimen/app_margin_left"
                    android:text="@string/confirm_pay_another"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_middle_text_size" />


            </RelativeLayout>

        </LinearLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>