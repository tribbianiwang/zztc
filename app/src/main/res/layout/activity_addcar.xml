<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/thirdLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/gray_white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/index_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/default_title"
            android:textColor="@color/white"
            android:textSize="@dimen/small_middle_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/app_margin_right"
            android:src="@drawable/icon_message_white"
            android:visibility="gone" />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_marginTop="@dimen/app_margin_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/icon_car_license_bg"
        android:scaleType="fitCenter"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_addcar"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/design_text_black"
            android:maxLength="1"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"

            android:background="@color/alphablack" />

        <TextView
            android:id="@+id/et2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:gravity="center"
            android:lines="1"
            android:maxLength="1"
            android:textColor="@color/design_text_black"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/alphablack" />

        <TextView
            android:id="@+id/et3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/design_text_black"
            android:maxLength="1"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/alphablack" />

        <TextView
            android:id="@+id/et4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:textColor="@color/design_text_black"
            android:gravity="center"
            android:lines="1"
            android:maxLength="1"
            android:textSize="@dimen/large_text_size" />


        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/alphablack" />

        <TextView
            android:id="@+id/et5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/design_text_black"
            android:lines="1"
            android:maxLength="1"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/alphablack" />

        <TextView
            android:id="@+id/et6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:textColor="@color/design_text_black"
            android:gravity="center"
            android:lines="1"
            android:maxLength="1"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/alphablack" />

        <TextView
            android:id="@+id/et7"
            android:textColor="@color/design_text_black"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:gravity="center"
            android:lines="1"

            android:maxLength="1"
            android:textSize="@dimen/large_text_size" />
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/validlicense_warning"
        android:textColor="@color/primary"
        android:textSize="@dimen/large_text_size" />

    <Button
        android:id="@+id/addCar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_add"
        android:text="@string/add_string"
        android:textColor="@color/white"
        android:textSize="@dimen/small_middle_text_size" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:paddingLeft="@dimen/app_margin_small"
            android:paddingRight="@dimen/app_margin_small"
            android:paddingTop="@dimen/app_margin_small"
            android:paddingBottom="@dimen/app_margin_left"
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/alphablack"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</LinearLayout>
