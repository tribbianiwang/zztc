<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_white"
    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/index_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        style="@style/ToolBarStyle"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/string_order_detail"
            android:textColor="@color/white"
            android:textSize="@dimen/small_middle_text_size" />
    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:layout_margin="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="120dp">
    <ImageView
        android:id="@+id/iv_card_type"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:background="@drawable/icon_month_card_bg"
        ></ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginTop="@dimen/app_margin_top"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/app_margin_right"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left|center_vertical"
                >
                <TextView
                    android:id="@+id/tv_park_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/small_middle_text_size"
                    android:textColor="@color/white"
                    />

                <LinearLayout
                    android:layout_marginTop="@dimen/app_margin_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView

                    android:id="@+id/tv_carlicense_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/medium_large_text_size"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/app_margin_left"
                    android:id="@+id/tv_take_effort"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/soft_gray"
                    />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_marginRight="@dimen/margin_30dp"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_card_type_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:textSize="@dimen/larger_text_size"
                android:textColor="@color/white"
                />




        </RelativeLayout>
    </FrameLayout>



    <RelativeLayout
        android:id="@+id/rl_car_license"
        android:layout_marginTop="0.5dp"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_marginRight="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_gray_bg_top_left_right"
        android:paddingTop="@dimen/app_margin_right"
        android:paddingBottom="@dimen/app_margin_right"
        >
        <ImageView
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_centerVertical="true"
            android:id="@+id/iv_carlicense_left"
            android:layout_alignParentLeft="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_carlicense_gray"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_carlicense_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_carlicense_title_long"
            android:textColor="@color/design_text_gray"
            />

        <ImageView
            android:layout_marginRight="@dimen/app_margin_left"
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_centerVertical="true"
            android:id="@+id/iv_carlicense_right"
            android:layout_alignParentRight="true"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:src="@drawable/icon_arrow_blue_down"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/tv_carlicense_right"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_carlicense_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/primary_blue"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_car_type"
        android:layout_marginTop="0.5dp"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_marginRight="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white_gray"
        android:paddingTop="@dimen/app_margin_right"
        android:paddingBottom="@dimen/app_margin_right"
        >
        <ImageView
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_centerVertical="true"
            android:id="@+id/iv_cardtype_left"
            android:layout_alignParentLeft="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_cartype_gray"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_cardtype_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_cardtype_title"
            android:textColor="@color/design_text_gray"
            />

        <ImageView
            android:layout_marginRight="@dimen/app_margin_left"
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_centerVertical="true"
            android:id="@+id/iv_cardtype_right"
            android:layout_alignParentRight="true"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:src="@drawable/icon_arrow_blue_down"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/tv_cardtype_right"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_cardtype_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_choose_card_type"
            android:textColor="@color/primary_blue"
            />

    </RelativeLayout>



    <TextView
        android:layout_marginTop="0.5dp"
        android:paddingLeft="@dimen/app_margin_left"
        android:paddingTop="@dimen/app_margin_right"
        android:paddingBottom="@dimen/app_margin_right"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_marginRight="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_choose_recharge"
        android:textColor="@color/gray"
        android:textSize="@dimen/small_middle_text_size"
        />
    <RelativeLayout
        android:id="@+id/rl_wechat"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_marginRight="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white_gray"
        android:paddingTop="@dimen/app_margin_right"
        android:paddingBottom="@dimen/app_margin_right"
        >
        <ImageView
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_centerVertical="true"
            android:id="@+id/iv_wechat_left"
            android:layout_alignParentLeft="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_wechat_circle"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_wechat_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_wechat_title"
            android:textColor="@color/design_text_gray"
            />

        <ImageView
            android:layout_marginRight="@dimen/app_margin_left"
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_centerVertical="true"
            android:id="@+id/iv_wechat_right"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_check_blue_noraml"
            android:scaleType="fitXY"
            />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_alipay"
        android:layout_marginTop="0.5dp"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_marginRight="@dimen/app_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_gray_bg_bottom_left_right"
        android:paddingTop="@dimen/app_margin_right"
        android:paddingBottom="@dimen/app_margin_right"
        >
        <ImageView
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_centerVertical="true"
            android:id="@+id/iv_alipay_left"
            android:layout_alignParentLeft="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_pay_ali"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_alipay_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_alipay_title"
            android:textColor="@color/design_text_gray"
            />

        <ImageView
            android:layout_marginRight="@dimen/app_margin_left"
            android:layout_marginLeft="@dimen/app_margin_left"
            android:layout_centerVertical="true"
            android:id="@+id/iv_alipay_right"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_check_blue_noraml"
            android:scaleType="fitXY"
            />



    </RelativeLayout>

    <Button

        android:id="@+id/bt_pay"
        android:layout_marginLeft="@dimen/app_margin_top"
        android:layout_marginRight="@dimen/app_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin_top"
        android:background="@drawable/bg_add"
        android:text="@string/string_pay_another"
        android:textColor="@color/white"
        android:textSize="@dimen/small_middle_text_size" />




</LinearLayout>