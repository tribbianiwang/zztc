<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white"
    android:orientation="vertical">



    <com.scwang.smartrefresh.layout.SmartRefreshLayout


        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_error_page"></include>




        <LinearLayout
            android:background="@color/white"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_money_title"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginLeft="@dimen/app_margin_right"
                android:layout_marginRight="@dimen/app_margin_right"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:background="@drawable/rounded_blue_bg"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:text="@string/balance_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_middle_text_size" />

                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:text="@string/defult_balance"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/app_margin_right"
                android:layout_marginRight="@dimen/app_margin_right"
                android:layout_marginTop="@dimen/app_margin_left"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="@dimen/app_margin_small"
                    android:layout_marginBottom="@dimen/app_margin_small"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.1">

                    <LinearLayout
                        android:id="@+id/money_20"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_money_normal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/money20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/money_twenty"
                            android:textColor="@color/design_text_gray"
                            android:textSize="@dimen/large_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/app_margin_left"
                        android:layout_marginRight="@dimen/app_margin_left"
                        android:id="@+id/money_50"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_money_normal"
                        android:gravity="center">

                        <TextView
                            android:textColor="@color/design_text_gray"
                            android:id="@+id/money50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/money_fifty"
                            android:textSize="@dimen/large_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/money_100"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_money_normal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/money100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/money_one_hundred"
                            android:textColor="@color/design_text_gray"
                            android:textSize="@dimen/large_text_size" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/app_margin_small"
                    android:layout_marginBottom="@dimen/app_margin_small"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.1">

                    <LinearLayout
                        android:id="@+id/money_200"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_money_normal"
                        android:gravity="center">

                        <TextView
                            android:textColor="@color/design_text_gray"
                            android:id="@+id/money200"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/money_two_hundred"
                            android:textSize="@dimen/large_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/app_margin_left"
                        android:id="@+id/money_500"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_money_normal"
                        android:gravity="center">

                        <TextView
                            android:textColor="@color/design_text_gray"
                            android:id="@+id/money500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/money_five_hundred"
                            android:textSize="@dimen/large_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/app_margin_left"
                        android:id="@+id/money_1000"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_money_normal"
                        android:gravity="center">

                        <TextView
                            android:textColor="@color/design_text_gray"
                            android:id="@+id/money1000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/money_one_thousand"
                            android:textSize="@dimen/large_text_size" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:id="@+id/inputMoneyView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/app_margin_small"
                    android:layout_weight="1.0"
                    android:background="@drawable/bg_inputmoney_normal">

                    <EditText
                        android:id="@+id/inputMoney"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/app_margin_left"
                        android:paddingRight="@dimen/app_margin_left"
                        android:background="@null"
                        android:hint="@string/money_input_by_yourself"
                        android:textColorHint="@color/design_text_gray"
                        android:textColor="@color/design_text_black"
                        android:textSize="@dimen/small_middle_text_size"
                        android:inputType="number" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/app_margin_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_margin_right"
                        android:text="@string/money_choose_recharge"
                        android:textColor="@color/design_text_black"
                        android:textSize="@dimen/small_middle_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_marginLeft="@dimen/app_margin_right"
                        android:id="@+id/wechatPay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top|center_horizontal"
                        android:background="@drawable/selector_white_gray"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="@dimen/app_margin_small"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_pay_wechat" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/app_margin_right"
                        android:background="@drawable/selector_white_gray"
                        android:id="@+id/aliPay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top|left"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="@dimen/app_margin_small"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_pay_ali" />


                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="bottom|center_horizontal"
                android:layout_weight="1.5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/money_use_of_auto_pay"
                    android:textSize="@dimen/micro_text_size"
                    android:textColor="@color/gray"
                    android:gravity="center"

                    />
                <TextView
                    android:layout_marginBottom="@dimen/app_margin_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/advice_open_auto_pay"
                    android:textSize="@dimen/micro_text_size"
                    android:textColor="@color/gray"
                    android:gravity="center"

                    />


            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>