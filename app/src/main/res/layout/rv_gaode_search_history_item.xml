<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">




        <TextView
            android:layout_marginBottom="@dimen/app_margin_small"
            android:layout_marginTop="@dimen/app_margin_small"
            android:background="@drawable/rounded_gray_bg"
            android:layout_weight="1"
            android:id="@+id/tv_park_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin_left"
            android:padding="@dimen/app_margin_small"
            android:text="1234"
            android:textColor="@color/gray_deep"
            android:textSize="@dimen/small_text_size" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_delete"
            android:paddingRight="@dimen/app_margin_right"
            android:layout_gravity="right|center_vertical"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_delete_circle_gray"
            />






</LinearLayout>